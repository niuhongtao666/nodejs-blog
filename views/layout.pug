doctype html
html(lang="en")
  head
    meta(http-equiv='pragma', content='no-cache')
    meta(http-equiv='Cache-Control', content='no-cache, must-revalidate')
    meta(http-equiv='expires', content='0')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title nodejs-blog
    link(rel='stylesheet',href='/bower_components/bootstrap/dist/css/bootstrap.min.css')
    //link(rel='stylesheet',href='/css/bootstrap.css')
    link(rel='stylesheet',href='/css/font.css')
    link(rel='stylesheet',href='/css/base.css')
    link(rel='stylesheet',href='/css/style.css')
    link(rel='stylesheet',href='/css/index.css')
    link(rel='stylesheet',href='/css/main.css')
    link(rel='stylesheet',href='/css/show.css')
  body
    nav.navbar.navbar-expand-md.navbar-dark.bg-dark.mb-2
      .container
        a.navbar-brand(href='javascript:void(0);') 蚁穴
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarsExample04', aria-controls='navbarsExample04', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarsExample04.collapse.navbar-collapse
          ul.navbar-nav.mr-auto
            li.nav-item.active
              a.nav-link(href='/')
                | 首页
                span.sr-only (current)
            if master
              li.nav-item
                a.nav-link(href='/articles/new') 添加
          ul.navbar-nav.navbar-right
            if user
              li.nav-item  
                a.nav-link(href='#') 用户名：#{user.name}
              li.nav-item
                a.nav-link(href='/users/logout') 退出
            else 
              li.nav-item
                a.nav-link(href='/users/register') 注册
              li.nav-item
                a.nav-link(href='/users/login') 登录
    //header.col-xs-12.text-center.infoheader
    //  h2 如影随形，如你所愿
    //  p
    //    | 拥有世界的同时，要懂得分享自我和珍惜现在
    .container
      if errors
        each error in errors
          div(class='alert alert-danger alert-dismissible') #{error.msg}
      != messages('message', locals)
      block content
      br
      //footer
      //    p right for me
    script(src='/bower_components/jquery/dist/jquery.min.js')
    script(src='/bower_components/bootstrap/dist/js/bootstrap.min.js')
    script(src='/js/main.js')

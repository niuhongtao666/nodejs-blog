extends ../layout

block content
    h3.textAlignCenter #{title}
    form.newInfo(method='post',action='/articles/create')
        .form-group
            label Title:
            input.form-control(type='text',name='title')
        //- .form-group
        //-     label Author:
        //-     input.form-control(name='author',type='text')
        .form-group
            label Body:
            textarea.form-control(name='body')
        .form-group.change
            label.disBlock images:
            input#files(type='file', name='file',)
            .imgArticle
                .deleteImg X
                img#each(src='')
        .form-group.change
            label
            input#fileName(type='hidden',name='fileName')
        input.btn.btn-primary(type='submit',value='submit')
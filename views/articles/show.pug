extends ../layout
block content
    h1 #{article.title}
    h5 writed by #{author}
    p=article.body
    if article.fileName
        .showImg
          img(src=article.fileName)
    p （注：登陆后可以编辑自己的文章）
    hr
    if user&&user.id==article.author
      a.btn.btn-primary.mr-2(href='/articles/'+article.id+'/edit') Edit
      a.btn.btn-danger.delete-article(href='#',data-id=article.id) Delete